<!-- Exercise trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#exerciseModal">
Create Excercise
</button>

<!-- Days trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#dayModal">
Create Day
</button>


<!-- Exercise Modal -->
<div class="modal fade" id="exerciseModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <%= form_for(@exercise) do |f| %>

		  <div class="field">
		    <%= f.label :name %><br />
		    <%= f.text_field :name %>
		  </div>

		  <div class="field">
		    <%= f.label :category %><br />
		    <%= f.select :category, ["Arms", "Legs", "Back", "Chest", "Core", "Shoulders"] %>
		  </div>

		  <div class="field">
		    <%= f.label :primary_muscle %><br />
		    <%= f.text_field :primary_muscle %>
		  </div>

		  <div class="field">
		    <%= f.label :notes %><br />
		    <%= f.text_area :notes, class: "loginput" %>
		  </div>

		   <div class="field">
		    <%= hidden_field_tag( "user_id",  @user.id) %>
		  </div>

		  <div class="actions">
		    <%= f.submit "Save", class: "btn" %>
		  </div>

		<% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<!-- Day Modal -->
<div class="modal fade" id="dayModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
